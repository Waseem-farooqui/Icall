<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/whiteGrey"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >

     <ImageView
         android:src="@drawable/icall"
         android:layout_width="400px"
         android:layout_height="300px"
         android:foregroundGravity="center"
         android:id="@+id/icall"
         android:layout_alignParentTop="true"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="10dp" />

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/icall"
        android:id="@+id/linearLayout"
        android:weightSum="1">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:background="@color/lightGrey"
            android:src="@drawable/ic_perm_identity_white_24dp"
            android:id="@+id/username_img"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            style="@style/AndroidTextField"
            android:hint="username"
            android:id="@+id/username"
            android:layout_toRightOf="@+id/username_img"
            android:layout_toEndOf="@+id/username_img"
            android:layout_alignTop="@+id/username_img"
            android:layout_alignBottom="@+id/username_img"/>

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@color/lightGrey"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_https_white_24dp"
            android:id="@+id/crediential_image"
            android:layout_below="@+id/username_img"
            android:layout_alignLeft="@+id/user_image"
            android:layout_alignStart="@+id/user_image"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            style="@style/AndroidTextField"
            android:ems="10"
            android:hint="password"
            android:id="@+id/password"
            android:layout_alignTop="@+id/crediential_image"
            android:layout_alignBottom="@+id/crediential_image"
            android:layout_toRightOf="@+id/crediential_image"
            android:layout_toEndOf="@+id/crediential_image" />

        <Button
            android:text="Login"
            android:id="@+id/btn_register"
            android:layout_gravity="center"
            android:textColor="@color/grey"
            style="@style/RedButton"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/logintext"
            style="@style/GreyText"
            android:layout_gravity="center"
            android:text="Already Register Login Me"
            android:layout_above="@+id/imageView"
            android:layout_alignRight="@+id/imageView"
            android:layout_alignEnd="@+id/imageView" />
        <ImageView
            android:src="@drawable/logotech"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/imageView" />
    </RelativeLayout>


</RelativeLayout>